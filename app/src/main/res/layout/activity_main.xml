<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
        <Button
                android:id="@+id/btnWiseAll"

                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#e5e5e5"

                android:text="전체\n(0)"
                android:textSize="15dp"
                android:textColor="#000000"
                android:gravity="center"
        />
        <Button
                android:id="@+id/btnWiseGrowth"

                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#e5e5ff"

                android:text="발전\n(0)"
                android:textSize="15dp"
                android:textColor="#000000"
                android:gravity="center"
        />
        <Button
                android:id="@+id/btnWiseAttitude"

                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#ffffe5"

                android:text="태도\n(0)"
                android:textSize="15dp"
                android:textColor="#000000"
                android:gravity="center"
        />
        <Button
                android:id="@+id/btnWiseHealing"

                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#e5f2e5"

                android:text="힐링\n(0)"
                android:textSize="15dp"
                android:textColor="#000000"
                android:gravity="center"
        />
        <Button
                android:id="@+id/btnWiseLove"

                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#ffe5e5"

                android:text="사랑\n(0)"
                android:textSize="15dp"
                android:textColor="#000000"
                android:gravity="center"
        />
        <Button
                android:id="@+id/btnOption"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/baseline_settings_applications_black_48"
                android:gravity="center"
        />
    </LinearLayout>

    <TextView
            android:id="@+id/txtWise"

            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25dp"

            android:text="Hello World!"
            android:textSize="25dp"
            android:gravity="center"
            android:padding="10dp"
    />

    <TextView
            android:id="@+id/txtPerson"

            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginHorizontal="25dp"

            android:text="Hello World!"
            android:textSize="15dp"
            android:gravity="right"
            android:paddingHorizontal="10dp"
    />

    <ImageView
            android:id="@+id/imgUnder"
            android:src="@drawable/bnr_proto1_0"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@color/colorPrimaryDark"
    />


    <Button
            android:id="@+id/btnChangeWise"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Change"

            android:visibility="gone"
    />

    <TextView
            android:id="@+id/txtDebug"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25dp"

            android:text="Debug Sheet"
            android:textSize="15dp"
            android:gravity="right"
            android:background="#a59989"
            android:padding="10dp"

            android:visibility="gone"
    />

    <!-- [AdMob][TestKey:on] -->
    <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</LinearLayout>