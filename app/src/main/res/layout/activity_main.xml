<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/imgUpper"
            android:src="@drawable/bnr_proto0"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
    />

    <TextView
            android:id="@+id/txtWise"

            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25dp"

            android:text="Hello World!"
            android:textSize="20dp"
            android:gravity="center"
            android:background="#a5ea89"
            android:padding="10dp"
    />

    <TextView
            android:id="@+id/txtPerson"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginHorizontal="25dp"

            android:text="Hello World!"
            android:textSize="15dp"
            android:gravity="right"
            android:background="#ffdad8"
            android:padding="10dp"
    />

    <ImageView
            android:id="@+id/imgUnder"
            android:src="@drawable/bnr_proto1_0"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@color/colorPrimaryDark"
    />


    <Button
            android:id="@+id/btnChangeWise"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Change"
    />

    <TextView
            android:id="@+id/txtDebug"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25dp"

            android:text="Debug Sheet"
            android:textSize="15dp"
            android:gravity="right"
            android:background="#a59989"
            android:padding="10dp"
    />

</LinearLayout>